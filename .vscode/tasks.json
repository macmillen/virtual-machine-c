{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build njvm",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "-std=c99",
                "-pedantic",
                "-o",
                "njvm",
                "njvm.c",
                "stack.c",
                "check_input.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "run njvm",
            "type": "shell",
            "command": "./njvm",
            "args": [
                "--prog1"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}